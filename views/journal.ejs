    <!---weekly journal drop-down-->
    <div class="container mt-5">
      <h2 class="text-center mb-4">Weekly Journal</h2>
       <div class="accordion" id="journalAccordion">
         <!---Monday-->
        <div class="accordion-item" id="monday">
          <h2 class="accordion-header">
            <button class="accordion-button" data-bs-toggle="collapse" data-bs-target="#collapseMonday">
              Monday
            </button>
          </h2>
          <div id="collapseMonday" class="accordion-collapse collapse" data-bs-parent="#journalAccordion">
            <div class="accordion-body">
              <textarea class="form-control journal-entry" rows="4" data-day="Monday"></textarea>
              <button class="btn btn-primary save-btn mt-2" data-day="Monday">Save</button>
            </div>
          </div>
        </div>
         <!---Tuesday-->
            <div class="accordion-item" id="tuesday">
              <h2 class="accordion-header">
                <button class="accordion-button" data-bs-toggle="collapse" data-bs-target="#collapseTuesday">
                  Tuesday
                </button>
              </h2>
              <div id="collapseTuesday" class="accordion-collapse collapse" data-bs-parent="#journalAccordion">
                <div class="accordion-body">
                  <textarea class="form-control journal-entry" rows="4" data-day="Tuesday"></textarea>
                  <button class= "btn btn-primary save-btn mt-2" data-day="Tuesday">Save</button>
                </div>
              </div>
            </div>
             <!---Wednesday-->
              <div class="accordion-item" id="wednesday">
                <h2 class="accordion-header">
                  <button class="accordion-button" data-bs-toggle="collapse" data-bs-target="#collapseWednesday">
                    Wednesday
                  </button>
                </h2>
                <div id="collapseWednesday" class="accordion-collapse collapse" data-bs-parent="#journalAccordion">
                  <div class="accordion-body">
                    <textarea class="form-control journal-entry" rows="4" data-day="Wednesday"></textarea>
                    <button class= "btn btn-primary save-btn mt-2" data-day="Wednesday">Save</button>
                  </div>
                </div>
              </div>
               <!---Thursday-->
                <div class="accordion-item" id="thursday">
                  <h2 class="accordion-header">
                    <button class="accordion-button" data-bs-toggle="collapse" data-bs-target="#collapseThursday">
                      Thursday
                    </button>
                  </h2>
                  <div id="collapseThursday" class="accordion-collapse collapse" data-bs-parent="#journalAccordion">
                    <div class="accordion-body">
                      <textarea class="form-control journal-entry" rows="4" data-day="Thursday"></textarea>
                      <button class="btn btn-primary save-btn mt-2" data-day="Thursday">Save</button>
                    </div>
                  </div>
                </div>
                 <!---Friday-->
                  <div class="accordion-item" id="friday">
                    <h2 class="accordion-header">
                      <button class="accordion-button" data-bs-toggle="collapse" data-bs-target="#collapseFriday">
                        Friday
                      </button>
                    </h2>
                    <div id="collapseFriday" class="accordion-collapse collapse" data-bs-parent="#journalAccordion">
                      <div class="accordion-body">
                        <textarea class="form-control journal-entry" rows="4" data-day="Friday"></textarea>
                        <button class="btn btn-primary save-btn mt-2" data-day="Friday">Save</button>
                      </div>
                    </div>
                  </div>
                   <!---Saturday-->
                    <div class="accordion-item" id="saturday">
                      <h2 class="accordion-header">
                        <button class="accordion-button" data-bs-toggle="collapse" data-bs-target="#collapseSaturday">
                          Saturday
                        </button>
                      </h2>
                      <div id="collapseSaturday" class="accordion-collapse collapse" data-bs-parent="#journalAccordion">
                        <div class="accordion-body">
                          <textarea class="form-control journal-entry" rows="4" data-day="Saturday"></textarea>
                          <button class= "btn btn-primary save-btn mt-2" data-day="Saturday">Save</button>
                        </div>
                      </div>
                    </div>
                     <!---sunday-->
                      <div class="accordion-item" id="sunday">
                        <h2 class="accordion-header">
                          <button class="accordion-button" data-bs-toggle="collapse" data-bs-target="#collapseSunday">
                            Sunday
                          </button>
                        </h2>
                        <div id="collapseSunday" class="accordion-collapse collapse" data-bs-parent="#journalAccordion">
                          <div class="accordion-body">
                            <textarea class="form-control journal-entry" rows="4" data-day="Sunday"></textarea>
                            <button class="btn btn-primary save-btn mt-2" data-day="Sunday">Save</button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>





 
  

